<h3 class="p-3 mb-5 border-bottom">Edit Post</h3>

<form action="/posts/{{post._id}}?_method=PUT" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" placeholder="Title" value="{{post.title}}">
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea name="content" id="content" class="form-control" rows="10" placeholder="Content">{{post.content}}</textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-info">
    </div>
</form>